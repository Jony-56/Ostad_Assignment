@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forget Password</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        body {
            background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-custom {
            background-color: rgba(37, 117, 252, 1);
            color: white;
            border-radius: 8px;
            padding: 10px;
            width: 100%;
        }

            .btn-custom:hover {
                background-color: rgba(30, 90, 200, 1);
            }

        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="card">
            <h3 class="text-center mb-4">Reset Password</h3>

            <form method="post" action="@Url.Action("ForgetPassword", "Account")">
                <div class="mb-3">
                    <label class="form-label" for="typeEmailX"><i class="fas fa-user"></i> Name </label>
                    <input type="text" name="Name" id="typeNameX" class="form-control" required />
                </div>

                <button class="btn btn-custom" type="submit">Next</button>
            </form>

        </div>
    </div>
</body>
</html>
